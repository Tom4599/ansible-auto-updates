###
##{{ ansible_managed }}
###

[commands]
{% if auto_updates_policy == "security" %}
update_cmd = security
{% else %}
update_cmd = default
{% endif %}
update_messages = no
download_updates = yes
apply_updates = no
random_sleep = {{ auto_updates_random_update_time }}

[emitters]
emit_via =

{% if auto_updates_blacklisted_packages|length > 0 %}
[base]
exclude={{ auto_updates_blacklisted_packages|join(' ') }}
{% endif %}
